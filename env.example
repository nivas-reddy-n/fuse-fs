# FUSE Virtual Filesystem Configuration

# Mount and Storage Configuration
# ------------------------------
# Directory where the filesystem will be mounted
MOUNT_POINT=/home/user/fuse_mount

# Directory where file data and metadata will be stored
STORAGE_PATH=/home/user/fuse_storage

# Cache Configuration
# ------------------------------
# Maximum amount of memory to use for caching (in MB)
CACHE_SIZE_MB=100

# Maximum number of files to keep in cache
CACHE_MAX_FILES=1000

# Google Drive Integration
# ------------------------------
# Set to "true" to enable Google Drive synchronization
ENABLE_GOOGLE_DRIVE=true

# Directory name to sync on Google Drive
GOOGLE_DRIVE_FOLDER=FUSE_Backup

# Sync interval in seconds
SYNC_INTERVAL=300

# Database Configuration
# ------------------------------
# Database type (sqlite or mysql)
DB_TYPE=sqlite

# For MySQL, uncomment and configure the following:
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=fuse_fs
# DB_USER=root
# DB_PASSWORD=password

# Logging Configuration
# ------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/var/log/fuse_fs.log

# Security Configuration
# ------------------------------
# Enable encryption for stored files
ENABLE_ENCRYPTION=false

# Encryption key (keep this secret!)
# ENCRYPTION_KEY=your-very-secure-encryption-key